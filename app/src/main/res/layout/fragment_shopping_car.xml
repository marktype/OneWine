<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/car_title"
        android:layout_width="match_parent"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_car_txt"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/content_text_size"/>
        <TextView
            android:id="@+id/edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10dp"
            android:textColor="@android:color/white"
            android:text="@string/edit_txt"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/car_buttom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <CheckBox
            android:id="@+id/car_allcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:button="@drawable/selector_check_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quanxuan_txt"
            android:layout_toRightOf="@+id/car_allcheck"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="全选"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_price_text"
            android:text="合计："
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/theme_color"
            android:layout_toRightOf="@id/quanxuan_txt"
            android:layout_marginLeft="@dimen/margin_10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_price_all"
            android:text="￥0.00"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/theme_color"
            android:layout_toRightOf="@id/car_price_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_price_text"
            android:layout_toRightOf="@id/quanxuan_txt"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@android:color/darker_gray"
            android:text="不含运费"/>
        <TextView
            android:id="@+id/car_goto_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/goto_jiesuan_txt"
            android:gravity="center_vertical"
            android:background="@color/theme_color"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/content_text_size"
            android:paddingLeft="@dimen/margin_30dp"
            android:paddingRight="@dimen/margin_30dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/shopcar_listview"
        android:layout_below="@id/car_title"
        android:layout_above="@id/car_buttom"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
