<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:padding="@dimen/margin_10dp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/phone_lin"
        android:layout_below="@+id/login_title"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/edit_phone"
            android:inputType="phone"
            android:hint="请输入密码"
            android:textSize="@dimen/content_text_size"
            android:textColorHint="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/line_login"
        android:layout_below="@+id/phone_lin"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/password_lin"
        android:layout_below="@+id/line_login"
        android:background="@android:color/white"
        android:padding="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/edit_password"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:hint="确认密码"
            android:textSize="@dimen/content_text_size"
            android:textColorHint="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:background="@drawable/rect_circle_red_shape"
        android:gravity="center"
        android:id="@+id/login_txt"
        android:textSize="@dimen/content_text_size"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/margin_10dp"
        android:padding="@dimen/margin_15dp"
        android:layout_below="@id/password_lin"/>

</RelativeLayout>
